<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.adobe.business.dao.BrandDao">
    <resultMap id="Brand" type="org.adobe.business.pojo.Brand">
        <id column="brand_id" jdbcType="INTEGER" property="brandId"/>
        <result column="brand_name" jdbcType="VARCHAR" property="brandName"/>
        <result column="brand_url" jdbcType="VARCHAR" property="brandUrl"/>
        <result column="brand_logo" jdbcType="VARCHAR" property="brandLogo"/>
        <result column="brand_desc" jdbcType="VARCHAR" property="brandDesc"/>
        <result column="brand_level" jdbcType="INTEGER" property="brandLevel"/>
        <result column="brand_bool" jdbcType="BIT" property="brandBool"/>
        <result column="brand_link" jdbcType="VARCHAR" property="brandLink"/>
    </resultMap>

    <select id="Base_Column_List">
        brand_id,brand_name,brand_url,brand_logo,brand_desc,brand_level,brand_bool,brand_link
    </select>

    <select id="getAllBrand"  resultMap="Brand">
        select * from t_brand
    </select>

    <select id="insertBrand" parameterType="org.adobe.business.pojo.Brand" resultType="java.lang.Integer">
        insert into t_brand (brand_id,brand_name,brand_url,brand_logo,brand_desc,brand_level,brand_bool,brand_link
        )
        values(#{brandId},#{brandName},#{brandUrl},#{brandLogo},#{brandDesc},#{brandLevel},#{brandBool},#{brandLink}
        )
    </select>

    <select id="deleteBrand" parameterType="java.lang.Integer" resultType="java.lang.Integer">
        delete from t_brand where brand_id = #{id}
    </select>

    <select id="updateBrand" parameterType="org.adobe.business.pojo.Brand" resultType="java.lang.Integer">
        update t_brand
        set brand_name = #{brandName},
        brand_url = #{brandUrl},
        brand_logo = #{brandLogo},
        brand_desc = #{brandDesc},
        brand_level = #{brandLevel},
        brand_bool = #{brandBool},
        brand_link = #{brandLink}
        where brand_id = #{brandId}
    </select>





</mapper>